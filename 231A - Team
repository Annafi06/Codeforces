#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n,a,b,c,i,count = 0;
    scanf("%d",&n);

    for (i = 0; i < n; i++)
    {
        scanf("%d%d%d",&a,&b,&c);

        if(a==1 && b==1)
        {
            if(c==1)
            {
                count++;
            }
            else
            {
                count++;
            }
        }
        else if(b==1 && c==1)
        {
            if(a==1)
            {
                count++;
            }
            else
            {
                count++;
            }
        }
        else if(a==1 && c==1)
        {
            if(b==1)
            {
                count++;
            }
            else
            {
                count++;
            }
        }
    }
    printf("%d\n", count);

    return 0;
}
